@using System.Threading.Tasks
@using Lightcore.Kernel.Data
@using Lightcore.Kernel.MVC
@model Item
@{

    var image = Model.Fields["Image"];
}

@if (image != null)
{
    <p>
        <img src="@image.Value" alt="Lightcore" />
    </p>
}
<article>
    <h2>@Model["Title"]</h2>
    @Html.Raw(Model["Text"])
</article>
@await Html.Lightcore().Placeholder("sidebar")