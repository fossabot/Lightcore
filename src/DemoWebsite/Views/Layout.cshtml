@using Lightcore.Kernel.MVC
@using Lightcore.Kernel.Urls
@model Lightcore.Kernel.Data.Item
@inject IItemUrlService Urls
<html>
<head>
    <title>@Model["Title"] - Lightcore</title>
    <style>
        html {
            background-color: rgb(12, 36, 53);
        }

        body {
            color: #d4d4c9;
            font-family: "Courier New", Courier, monospace;
            font-size: 1.2em;
            margin-left: auto;
            margin-right: auto;
            padding-top: 0.5em;
            width: 92%;
        }

        a {
            color: #d4d4c9;
        }

        a:hover {
            color: rgb(250, 244, 10);
        }

        footer {
            border-top: 1px solid gray;
            border-bottom: 1px solid gray;
            margin-bottom: 10px;
            text-align: center;
        }

        nav {
            border-bottom: 1px solid gray;
            height: 70px;
        }

        nav ul {
            padding: 0px;
        }

        nav li {
            list-style: none;
            display: inline;
        }
        
        #debug {
            color: darkgrey;
        }

        #menu {
            float: left;
        }

        #languages {
            float: right;
        }
    </style>
</head>
<body>
    <h1>Lightcore</h1>
    @await Html.Lightcore().Placeholder("dummy")
    <div>
        @await Html.Lightcore().Placeholder("content")
    </div>
    <footer>
        @await Html.Lightcore().Placeholder("footer")
    </footer>
    <div id="debug">
        <code>
            Model.Type: @Model.GetType()<br />
            Model.Trace: <strong>@Model.Trace</strong><br />
            Model.Id: @Model.Id<br />
            Model.Language.Name: @Model.Language.Name<br />
            Model.Path: @Model.Path<br />
            Model.Key: @Model.Key<br />
            Model.Name: @Model.Name<br />
            Model.Url: @Urls.GetUrl(Model)<br />
            Model.Fields.Count: @Model.Fields.Count()<br />
            Model.Children.Count: @Model.Children.Count()<br />
        </code>
    </div>
</body>
</html>